h1 {
  display: inline-block;
}

header .logo {
  line-height: 100px;
  height: 100px;
  
  margin-bottom: 20px;
}

.container {
  width: 740px;
  margin: 40px auto;
  
  text-align: justify;
}
.cr2 {
    height: 50px;
    position:absolute;
    left: 0px;
    right: 0px;
